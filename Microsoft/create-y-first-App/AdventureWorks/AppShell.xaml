<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdventureWorks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AdventureWorks"
    xmlns:views="clr-namespace:AdventureWorks.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Rannyere is working here!"
    BackgroundColor="Blue"
    Shell.TitleColor="White">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="User"
            ContentTemplate="{DataTemplate views:UserDetailView}"
            Route="UserDetailView" />
    </TabBar>
</Shell>